<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your name"
        android:textSize="18sp"
        android:id="@+id/textViewName"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:padding="5dp"/>
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextName"
        android:background="@drawable/round_edittext"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textViewName"
        android:layout_margin="5dp"
        android:textAlignment="center"
        android:padding="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewUsername"
        android:textSize="18sp"
        android:text="Username"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/editTextName"
        android:padding="5dp"/>
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextUsername"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textViewUsername"
        android:textAlignment="center"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:background="@drawable/round_edittext"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/editTextUsername"
        android:id="@+id/textViewPassword"
        android:padding="5dp"/>
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextPassword"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textViewPassword"
        android:layout_margin="5dp"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:background="@drawable/round_edittext"
        android:padding="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewConfirm"
        android:text="Confirm password"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/editTextPassword"
        android:textSize="18sp"
        android:padding="5dp"/>
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextConfirm"
        android:background="@drawable/round_edittext"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textViewConfirm"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:inputType="textPassword"
        android:textAlignment="center" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewHometown"
        android:text="Your hometown"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/editTextConfirm"
        android:textSize="18sp"
        android:padding="5dp"/>
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextHometown"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textViewHometown"
        android:background="@drawable/round_edittext"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:textAlignment="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewGender"
        android:text="Your gender"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/editTextHometown"
        android:textSize="18sp"
        android:padding="5dp"/>
    <Spinner
        android:id="@+id/spinnerGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textViewGender"
        android:layout_margin="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewHeight"
        android:text="Your height in cm"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_below="@id/spinnerGender"
        android:textSize="18sp"
        android:padding="5dp"/>
    <EditText
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextHeight"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_below="@id/textViewHeight"
        android:background="@drawable/round_edittext"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:padding="5dp"
        android:textAlignment="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewWeight"
        android:text="Your weight in kg"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_below="@id/spinnerGender"
        android:textSize="18sp"
        android:padding="5dp"/>
    <EditText
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextWeight"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/textViewHeight"
        android:background="@drawable/round_edittext"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:padding="5dp"
        android:textAlignment="center"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:background="@drawable/round_edittext"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/editTextWeight"
        android:padding="5dp"
        android:layout_margin="30dp"
        android:id="@+id/buttonRegister"
        android:onClick="onRegister"/>
</RelativeLayout>
