<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <com.github.mikephil.charting.charts.BarChart
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/barChart"
        android:layout_alignParentTop="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewDisplayProgress"
        android:text="This graph displays your resent weight changes"
        android:textSize="15sp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_below="@id/barChart"
        android:padding="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/textViewUpdateWeight"
        android:padding="5dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/textViewDisplayProgress"
        android:text="Update your weight"
        android:textSize="15sp"/>
    <EditText
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextAddWeight"
        android:layout_toEndOf="@id/textViewUpdateWeight"
        android:layout_marginStart="10dp"
        android:layout_below="@id/textViewDisplayProgress"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:background="@drawable/round_edittext"
        android:textAlignment="center"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/editTextAddWeight"
        android:layout_marginStart="10dp"
        android:layout_below="@id/textViewDisplayProgress"
        android:layout_marginTop="4dp"
        android:text="Update"
        android:backgroundTint="@color/purple_500"
        android:textColor="@color/white"
        android:background="@drawable/round_edittext"
        android:id="@+id/buttonUpdateWeight"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Count BMI"
        android:textColor="@color/white"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_edittext"
        android:backgroundTint="@color/purple_500"
        android:layout_below="@id/editTextAddWeight"
        android:id="@+id/buttonBMI"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewBMI"
        android:text=""
        android:textSize="17sp"
        android:layout_toEndOf="@id/buttonBMI"
        android:layout_marginStart="10dp"
        android:layout_below="@id/editTextAddWeight"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/buttonBMI"
        android:layout_below="@id/textViewBMI"
        android:id="@+id/textViewNormalBMI"
        android:text=""
        android:textSize="17sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"/>
</RelativeLayout>
